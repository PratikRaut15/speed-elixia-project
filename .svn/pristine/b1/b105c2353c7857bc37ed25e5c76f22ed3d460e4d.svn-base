@import url(https://fonts.googleapis.com/css?family=Raleway|Reenie+Beanie);



.date {
  font-size: 0.75em;
}

.description {
  font-size: 0.9em;
  padding: 0 20px 20px 20px;
  text-align: left;
}

.container_awards {
  perspective: 1000px;
  display: inline-block;
  margin: 3%;
}

/*.container_awards:hover .flipper {
  transform: rotateY(180deg);
}*/

.container_awards,
.front,
.back {
  width: 400px;
  height: 250px;
}

/*.flipper {
  transition: 0.6s;
  transform-style: preserve-3d;
  position: relative;
}
*/
.front,
.back {
  backface-visibility: hidden;
  position: absolute;
  top: 0;
  left: 0;
  width: 400px;
  height: 250px;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
}

.front {
  z-index: 2;
  
}

