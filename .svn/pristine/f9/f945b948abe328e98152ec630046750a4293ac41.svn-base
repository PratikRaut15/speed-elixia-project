/* element.scss */

body {
    background: $clr-root;
    font-size: 14px;
    font-family: 'Heebo', sans-serif;
    color: $clr-base;
    // padding-top: 82px;
}

p {
    font-size: 14px;
    line-height: 22px;
    margin-bottom: 35px
}

a,
a:hover,
a:focus,
a:active {
    color: $clr-base;
    text-decoration: none;
    outline: none;
}

ul,
li {
    list-style: none;
    margin: 0;
    padding: 0;
}