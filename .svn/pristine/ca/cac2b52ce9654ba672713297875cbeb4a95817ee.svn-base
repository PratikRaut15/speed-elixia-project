//mod-sub-menu
.mod-sub-menu {
    position: absolute;
    top: 35px;
    background: $clr-root;
    padding: 20px;
    width: auto;
    height: auto;
    // transform-style: preserve-3d;
    // transform: rotateX(-30deg);
    // transform-origin: 50% 0;
    opacity: 0;
    visibility: hidden;
    transition-duration: 0.5s;
    box-shadow: 0px 0px 5px #ccc;
    left: 50%;
    transform: translateX(-50%);
    .nav-link {
        color: #555555;
        &:hover {
            color: $clr-primary;
        }
    }
}