//bs-testimonial
.bs-testimonial {
    padding: 35px;
    background: $clr-root;
    -webkit-box-shadow: 0px 0px 40px -4px rgba(220, 220, 220, 1);
    -moz-box-shadow: 0px 0px 40px -4px rgba(220, 220, 220, 1);
    box-shadow: 0px 0px 40px -4px rgba(220, 220, 220, 1);
    min-height: 305px;
    .title {
        font-size: 24px;
        line-height: 26px;
        color: $clr-secondary;
        margin-bottom: 5px;
        text-transform: uppercase;
        font-weight: $fnt-bold;
    }
    .subtitle {
        font-size: 14px;
        line-height: 20px;
        color: $clr-secondary;
        margin-bottom: 30px;
    }
    .desc {
        // overflow: hidden;
        // text-overflow: ellipsis;
        // display: -webkit-box;
        // max-height: 70px;
        // -webkit-line-clamp: 4;
        // -webkit-box-orient: vertical;
        padding: 0!important;
        p {
            font-size: 18px;
            line-height: 25px;
            color: $clr-base;
            margin-bottom: 0px;
        }
    }
}

@media only screen and(max-width:$mobile-breakpoint) {
    .bs-testimonial {
        padding: 15px;
    }
}